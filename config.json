{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "read_timeout": 20,
    "websocket": {
      "read_timeout": 20,
      "max_message_size": 2097152,
      "read_buffer_size": 1024,
      "write_buffer_size": 1024,
      "enable_compression": true
    }
  },
  "session": {
    "send_queue_size": 500,
    "max_send_errors": 10
  },
  "vad": {
    "model_path": "models/vad/silero_vad.onnx",
    "threshold": 0.5,
    "min_silence_duration": 0.1,
    "min_speech_duration": 0.25,
    "max_speech_duration": 8.0,
    "window_size": 512,
    "buffer_size_seconds": 10.0,
    "pool_size": 200
  },
  "recognition": {
    "model_path": "models/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/model.int8.onnx",
    "tokens_path": "models/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/tokens.txt",
    "language": "auto",
    "use_inverse_text_normalization": false,
    "num_threads": 16,
    "provider": "cpu",
    "debug": false
  },
  "speaker": {
    "enabled": true,
    "model_path": "models/speaker/3dspeaker_speech_campplus_sv_zh-cn_16k-common.onnx",
    "num_threads": 8,
    "provider": "cpu",
    "threshold": 0.6,
    "data_dir": "data/speaker"
  },
  "audio": {
    "sample_rate": 16000,
    "feature_dim": 80,
    "normalize_factor": 32768.0,
    "chunk_size": 4096
  },
  "pool": {
    "instance_mode": "single",
    "worker_count": 500,
    "queue_size": 10000
  },
  "rate_limit": {
    "enabled": false,
    "requests_per_second": 1000,
    "burst_size": 2000,
    "max_connections": 2000
  },
  "response": {
    "send_mode": "queue",
    "timeout": 6
  },
  "logging": {
    "level": "info",
    "format": "text",
    "output": "both",
    "file_path": "logs/app.log",
    "max_size": 100,
    "max_backups": 5,
    "max_age": 30,
    "compress": true
  }
} 